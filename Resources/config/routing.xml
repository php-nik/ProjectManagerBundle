<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="pletnev_pm_setusertheme" path="/set-theme">
        <default key="_controller">PletnevProjectManagerBundle:User:setTheme</default>
    </route>
    
    <route id="pletnev_pm_profile" path="/profile">
        <default key="_controller">PletnevProjectManagerBundle:User:profile</default>
    </route>
    
    <route id="pletnev_pm_settings" path="/settings">
        <default key="_controller">PletnevProjectManagerBundle:User:settings</default>
    </route>
    
    <route id="pletnev_pm" path="/">
        <default key="_controller">PletnevProjectManagerBundle:Project:index</default>
    </route>
    
    <route id="pletnev_pm_project_favorite" path="/project/favorite">
        <default key="_controller">PletnevProjectManagerBundle:Project:favorite</default>
    </route>
    
    <route id="pletnev_pm_projects" path="/projects">
        <default key="_controller">PletnevProjectManagerBundle:Project:projects</default>
    </route>
    
    <route id="pletnev_pm_project_create" path="/project/create">
        <default key="_controller">PletnevProjectManagerBundle:Project:create</default>
    </route>
    
    <route id="pletnev_pm_project_edit" path="/project/{id}/edit">
        <default key="_controller">PletnevProjectManagerBundle:Project:edit</default>
    </route>
    
    <route id="pletnev_pm_project" path="/project/{id}">
        <default key="_controller">PletnevProjectManagerBundle:Project:project</default>
    </route>
    
    <route id="pletnev_pm_tasks" path="/project/{id}/tasks">
        <default key="_controller">PletnevProjectManagerBundle:Task:tasks</default>
    </route>
    
    <route id="pletnev_pm_task_create" path="/project/{id}/task/create">
        <default key="_controller">PletnevProjectManagerBundle:Task:create</default>
    </route>
    
    <route id="pletnev_pm_task_delete" path="/task/{id}/delete">
        <default key="_controller">PletnevProjectManagerBundle:Task:detele</default>
    </route>
    
    <route id="pletnev_pm_task_edit" path="/task/{id}/edit">
        <default key="_controller">PletnevProjectManagerBundle:Task:edit</default>
    </route>
    
    <route id="pletnev_pm_task" path="/task/{id}">
        <default key="_controller">PletnevProjectManagerBundle:Task:task</default>
    </route>
    
    <route id="pletnev_pm_task_times" path="/task/{taskId}/times">
        <default key="_controller">PletnevProjectManagerBundle:Task:times</default>
    </route>
    
</routes>
