<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="pletnev_pm_admin" path="/">
        <default key="_controller">PletnevProjectManagerBundle:Admin:index</default>
    </route>
    
    <route id="pletnev_pm_admin_projects" path="/projects">
        <default key="_controller">PletnevProjectManagerBundle:Admin:projects</default>
    </route>
    
    <route id="pletnev_pm_admin_project_create" path="/project/create">
        <default key="_controller">PletnevProjectManagerBundle:Admin:createProject</default>
    </route>
    
    <route id="pletnev_pm_admin_project_edit" path="/project/{projectSlug}/edit">
        <default key="_controller">PletnevProjectManagerBundle:Admin:editProject</default>
    </route>
    
    <route id="pletnev_pm_admin_project" path="/project/{projectSlug}">
        <default key="_controller">PletnevProjectManagerBundle:Admin:project</default>
    </route>
    
    <route id="pletnev_pm_admin_tasks" path="/project/{projectSlug}/tasks">
        <default key="_controller">PletnevProjectManagerBundle:Admin:tasks</default>
    </route>
    
    <route id="pletnev_pm_admin_task_create" path="/project/{projectSlug}/task/create">
        <default key="_controller">PletnevProjectManagerBundle:Admin:createTask</default>
    </route>
    
    <route id="pletnev_pm_admin_task_delete" path="/project/{projectSlug}/task/{taskId}/delete">
        <default key="_controller">PletnevProjectManagerBundle:Admin:deteleTask</default>
    </route>
    
    <route id="pletnev_pm_admin_task_edit" path="/project/{projectSlug}/task/{taskId}/edit">
        <default key="_controller">PletnevProjectManagerBundle:Admin:editTask</default>
    </route>
    
    <route id="pletnev_pm_admin_task" path="/project/{projectSlug}/task/{taskId}">
        <default key="_controller">PletnevProjectManagerBundle:Admin:task</default>
    </route>
    
    <route id="pletnev_pm_admin_profile" path="/profile">
        <default key="_controller">PletnevProjectManagerBundle:Admin:profile</default>
    </route>
    
    <route id="pletnev_pm_admin_settings" path="/settings">
        <default key="_controller">PletnevProjectManagerBundle:Admin:settings</default>
    </route>
    
    <route id="pletnev_pm_admin_task_times" path="/task/{taskId}/times">
        <default key="_controller">PletnevProjectManagerBundle:Admin:times</default>
    </route>
</routes>
