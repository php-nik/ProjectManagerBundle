{%  extends "PletnevProjectManagerBundle:Admin:layout.html.twig" %}



{% block breadcrumbs %}
    <li><a href="{{ path(route_prefix) }}"><i class="glyphicon glyphicon-home"></i></a></li>
    <li>Проекты</li>
{% endblock %}



{% block body %}
    <style>
        img.favorite {
            width: 24px;
            cursor: pointer;
        }
    </style>
    <a class="btn btn-success" href="{{ path(route_prefix~'_project_create') }}"><i class="glyphicon glyphicon-plus icon-white"></i> Новый проект</a>
    <br><br>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Название</th>
                <th>Автор</th>
                <th>Активные задачи</th>
                <th>В избранных</th>
            </tr>
        </thead>
    {% set favoriteProjects = settings().favoriteProjects %}
    {% for project in projects %}
        <tr>
            <td><a href="{{ path(route_prefix~'_project' , {projectSlug: project.slug}) }}">{{ project }}</a></td>
            <td>{{ project.author }}</td>
            <td><a href="{{ path(route_prefix~'_tasks' , {projectSlug: project.slug}) }}">{{ project.countActiveTasks }}</a></td>
            <td><img class="favorite" projectid="{{ project.id }}" src="/bundles/pletnevprojectmanager/img/star-{{ favoriteProjects.contains(project) ? 'on' : 'off' }}.png"></td>
        </tr>
    {% endfor %}
    </table>
    
    <script>
        $('.favorite').click(function(){
            ajaxLoad(1);
            var projectId = $(this).attr('projectid');
            
            $.get('{{ path('pletnev_pm_project_favorite') }}' , {
                projectId: projectId
            } , function(data){
                if(data.content == 'on' || data.content == 'off'){
                    $('[projectid='+data.projectId+'].favorite').attr('src' , '/bundles/pletnevprojectmanager/img/star-'+data.content+'.png');
                }else{
                    alert('Ошибка');
                }
                ajaxLoad(0);
                
            });
        });
    </script>
{% endblock %}